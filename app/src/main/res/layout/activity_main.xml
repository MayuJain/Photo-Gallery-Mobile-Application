<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="60dp"
        android:text="@string/bt_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/im_view"
        android:layout_width="283dp"
        android:layout_height="235dp"
        android:layout_marginTop="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_option"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_option"
        android:layout_width="126dp"
        android:layout_height="46dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toStartOf="@+id/bt_go"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/im_next"
        android:layout_width="113dp"
        android:layout_height="49dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/im_view"
        app:srcCompat="@drawable/next" />

    <ImageView
        android:id="@+id/im_prev"
        android:layout_width="109dp"
        android:layout_height="54dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toStartOf="@+id/im_next"
        app:layout_constraintHorizontal_bias="0.378"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/im_view"
        app:srcCompat="@drawable/prev" />

    <ProgressBar
        android:id="@+id/pg_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="109dp"
        android:layout_height="131dp"
        app:layout_constraintBottom_toBottomOf="@+id/im_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/im_view" />

</androidx.constraintlayout.widget.ConstraintLayout>